---
import "../styles/global.css";

const {
  title = "Imprenta Boadilla",
  description = "Imprenta, carteler√≠a, packaging y dise√±o. Presupuestos r√°pidos en Boadilla del Monte.",
} = Astro.props;

const canonical = Astro.url?.href ?? "";
const siteName = "Imprenta Boadilla";

// ‚ö†Ô∏è Rellena estos datos (frontend-only, no toca backend)
const BUSINESS = {
  name: "Imprenta Boadilla",
  url: canonical ? new URL(canonical).origin : "https://tudominio.com",
  telephone: "+34 TU_TELEFONO",
  email: "tuemail@dominio.com",
  address: {
    streetAddress: "TU_DIRECCI√ìN",
    addressLocality: "Boadilla del Monte",
    addressRegion: "Madrid",
    postalCode: "28660",
    addressCountry: "ES",
  },
  geo: {
    latitude: "40.4050",
    longitude: "-3.8790",
  },
  openingHours: ["Mo-Fr 09:00-19:00", "Sa 10:00-14:00"],
  sameAs: [],
};

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  name: BUSINESS.name,
  url: BUSINESS.url,
  telephone: BUSINESS.telephone,
  email: BUSINESS.email,
  address: { "@type": "PostalAddress", ...BUSINESS.address },
  geo: { "@type": "GeoCoordinates", ...BUSINESS.geo },
  openingHours: BUSINESS.openingHours,
  sameAs: BUSINESS.sameAs,
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    {canonical && <link rel="canonical" href={canonical} />}

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <meta name="robots" content="index,follow" />

    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {canonical && <meta property="og:url" content={canonical} />}
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="icon" href="/favicon.svg" />

    <script type="application/ld+json">
      {JSON.stringify(jsonLd)}
    </script>
  </head>

  <body class="min-h-screen bg-slatebrand-50 text-slatebrand-900 antialiased">
    <a
      href="#contenido"
      class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 focus:rounded-xl focus:bg-white focus:px-4 focus:py-3 focus:text-slatebrand-900 focus:shadow-lg"
    >
      Saltar al contenido
    </a>

    <!-- Top promo bar (Pixart-ish) -->
    <div class="border-b border-slatebrand-200 bg-slatebrand-900 text-white">
      <div class="container-max flex flex-wrap items-center justify-between gap-2 py-2 text-xs">
        <p class="opacity-90">
          üî• Ofertas semanales ‚Ä¢ Producci√≥n r√°pida ‚Ä¢ Soporte local en Boadilla
        </p>
        <div class="flex flex-wrap items-center gap-3 opacity-90">
          <a class="hover:underline" href="/contacto">Contacto</a>
          <a class="hover:underline" href="/presupuesto">Presupuesto</a>
          <a class="hover:underline" href="/admin/login">Admin</a>
        </div>
      </div>
    </div>

    <!-- Header -->
    <header class="sticky top-0 z-40 border-b border-slatebrand-200 bg-white/85 backdrop-blur">
      <div class="container-max grid gap-3 py-4 md:grid-cols-[auto,1fr,auto] md:items-center">
        <!-- Brand -->
        <a href="/" class="flex items-center gap-3 font-bold tracking-tight">
          <span class="inline-flex h-10 w-10 items-center justify-center rounded-2xl bg-primary-600 text-white">
            IB
          </span>
          <span class="leading-tight">
            Imprenta <span class="text-primary-700">Boadilla</span>
            <span class="block text-xs font-semibold text-slatebrand-500">Impresi√≥n ‚Ä¢ Rotulaci√≥n ‚Ä¢ Packaging</span>
          </span>
        </a>

        <!-- Search (desktop) -->
        <form class="hidden md:block" action="/presupuesto" method="GET" role="search" aria-label="Buscar productos">
          <div class="relative">
            <input
              name="q"
              class="w-full rounded-2xl border border-slatebrand-200 bg-slatebrand-50 px-4 py-3 pr-28 text-sm text-slatebrand-900 placeholder:text-slatebrand-500 focus:border-primary-600"
              placeholder="Busca: tarjetas, flyers, pegatinas, lonas‚Ä¶"
            />
            <button
              class="absolute right-2 top-1/2 -translate-y-1/2 rounded-xl bg-primary-600 px-4 py-2 text-sm font-semibold text-white hover:bg-primary-700"
              type="submit"
            >
              Buscar
            </button>
          </div>
        </form>

        <!-- CTAs -->
        <div class="flex items-center gap-2 justify-self-end">
          <a class="btn btn-outline hidden sm:inline-flex" href="/contacto">Contacto</a>
          <a class="btn btn-primary" href="/presupuesto">Pedir presupuesto</a>
        </div>
      </div>

      <!-- Category nav -->
      <nav class="border-t border-slatebrand-200 bg-white">
        <div class="container-max flex gap-2 overflow-x-auto py-3 text-sm">
          <a class="chip border-slatebrand-200 bg-slatebrand-50 text-slatebrand-800 hover:bg-white" href="/#categorias">M√°s vendidos</a>
          <a class="chip border-slatebrand-200 bg-white text-slatebrand-800 hover:bg-slatebrand-50" href="/#servicios">Servicios</a>
          <a class="chip border-slatebrand-200 bg-white text-slatebrand-800 hover:bg-slatebrand-50" href="/#trabajos">Trabajos</a>
          <a class="chip border-slatebrand-200 bg-white text-slatebrand-800 hover:bg-slatebrand-50" href="/#faq">FAQ</a>
          <a class="chip border-warm-200 bg-warm-50 text-warm-900 hover:bg-warm-100" href="/presupuesto">Urgente</a>
          <a class="chip border-tealbrand-200 bg-tealbrand-50 text-tealbrand-900 hover:bg-tealbrand-100" href="/contacto">Asesoramiento</a>
        </div>
      </nav>
    </header>

    <main id="contenido">
      <slot />
    </main>

    <footer class="border-t border-slatebrand-200 bg-white">
      <div class="container-max grid gap-8 py-12 md:grid-cols-3">
        <div>
          <p class="text-lg font-bold">Imprenta Boadilla</p>
          <p class="mt-2 text-sm text-slatebrand-600">
            Impresi√≥n, carteler√≠a, rotulaci√≥n, packaging y dise√±o. Respuesta r√°pida y trato local.
          </p>
          <div class="mt-4 flex flex-wrap gap-3 text-sm">
            <a class="btn btn-primary" href="/presupuesto">Pedir presupuesto</a>
            <a class="btn btn-outline" href="/contacto">Contacto</a>
          </div>
        </div>

        <div>
          <p class="text-sm font-bold text-slatebrand-900">Servicios</p>
          <ul class="mt-3 space-y-2 text-sm text-slatebrand-600">
            <li><a class="hover:text-slatebrand-900" href="/#servicios">Tarjetas, flyers, cat√°logos</a></li>
            <li><a class="hover:text-slatebrand-900" href="/#servicios">Vinilos, lonas, r√≥tulos</a></li>
            <li><a class="hover:text-slatebrand-900" href="/#servicios">Packaging y pegatinas</a></li>
          </ul>
        </div>

        <div>
          <p class="text-sm font-bold text-slatebrand-900">Datos</p>
          <ul class="mt-3 space-y-2 text-sm text-slatebrand-600">
            <li>üìç {BUSINESS.address.addressLocality}, {BUSINESS.address.addressRegion}</li>
            <li>üìû <a class="hover:text-slatebrand-900" href={`tel:${BUSINESS.telephone}`}>{BUSINESS.telephone}</a></li>
            <li>‚úâÔ∏è <a class="hover:text-slatebrand-900" href={`mailto:${BUSINESS.email}`}>{BUSINESS.email}</a></li>
          </ul>
        </div>
      </div>

      <div class="border-t border-slatebrand-200">
        <div class="container-max flex flex-col gap-3 py-6 text-sm text-slatebrand-600 md:flex-row md:items-center md:justify-between">
          <div class="flex flex-wrap gap-3">
            <a class="underline hover:text-slatebrand-900" href="/legal/aviso-legal">Aviso legal</a>
            <a class="underline hover:text-slatebrand-900" href="/legal/privacidad">Privacidad</a>
            <a class="underline hover:text-slatebrand-900" href="/legal/cookies">Cookies</a>
          </div>
          <p>¬© {new Date().getFullYear()} Imprenta Boadilla</p>
        </div>
      </div>
    </footer>
  </body>
</html>
