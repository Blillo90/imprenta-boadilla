---
import BaseLayout from "../../layouts/BaseLayout.astro";
const e = Astro.url.searchParams.get("e");
---

<BaseLayout title="Admin Login" description="Acceso privado (admin).">
  <main class="mx-auto max-w-md px-4 py-16">
    <!-- Card oscura (admin) -->
    <section class="rounded-3xl border border-slate-200 bg-slate-950 p-8 text-slate-100 shadow-sm">
      <header class="flex items-center gap-3">
        <span class="inline-flex h-10 w-10 items-center justify-center rounded-2xl bg-blue-600 text-white font-bold">
          IB
        </span>
        <div>
          <h1 class="text-xl font-bold text-white">Admin</h1>
          <p class="text-sm text-slate-300">Acceso privado</p>
        </div>
      </header>

      {e ? (
        <p class="mt-5 rounded-xl border border-red-500/30 bg-red-500/10 p-3 text-sm text-red-200">
          Login incorrecto
        </p>
      ) : null}

      <form class="mt-6 grid gap-3" method="POST" action="/api/login">
        <label class="grid gap-2">
          <span class="text-sm font-semibold text-slate-200">Email</span>
          <input
            class="w-full rounded-xl border border-white/10 bg-slate-900/60 px-4 py-3 text-slate-100 placeholder:text-slate-500 focus:border-blue-500"
            name="email"
            type="email"
            required
            autocomplete="email"
            placeholder="Email"
          />
        </label>

        <label class="grid gap-2">
          <span class="text-sm font-semibold text-slate-200">Password</span>
          <input
            class="w-full rounded-xl border border-white/10 bg-slate-900/60 px-4 py-3 text-slate-100 placeholder:text-slate-500 focus:border-blue-500"
            name="password"
            type="password"
            required
            autocomplete="current-password"
            placeholder="Password"
          />
        </label>

        <button
          class="mt-2 rounded-xl bg-blue-600 px-5 py-3 font-semibold text-white hover:bg-blue-700"
          type="submit"
        >
          Entrar
        </button>

        <p class="mt-2 text-xs text-slate-400">
          Panel privado. Si no eres administrador, vuelve a la web.
        </p>
      </form>
    </section>
  </main>
</BaseLayout>
